<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net45</TargetFrameworks>
    <AssemblyOriginatorKeyFile>$(SolutionDir)\ApprovalsKeyPair.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>true</SignAssembly>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A picture's worth a 1000 tests. Unit testing asserts can be difficult to use. Approval tests simplify this by taking a snapshot of the results, and confirming that they have not changed.</Description>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="AlphaFS" Version="2.1.3" />
    <PackageReference Include="EntityFramework" Version="5.0.0" PrivateAssets="All" />
    <PackageReference Include="Fody" Version="2.4.6" PrivateAssets="All" />
    <PackageReference Include="Publicize.Fody" Version="1.5.0" PrivateAssets="All" />
    <PackageReference Include="StatePrinter" Version="1.0.3" PrivateAssets="All" />
    <PackageReference Include="Virtuosity.Fody" Version="1.20.2" PrivateAssets="All" />
    <PackageReference Include="Microsoft.AspNet.Mvc" Version="3.0.20105.1" ExcludeAssets="All" />
    <PackageReference Include="Microsoft.AspNet.Razor" Version="1.0.20105.408" ExcludeAssets="All" />
    <PackageReference Include="Microsoft.AspNet.WebPages" Version="1.0.20105.408" ExcludeAssets="All" />
    <PackageReference Include="Microsoft.Web.Infrastructure" Version="1.0.0.0" ExcludeAssets="All" />
    <Reference Include="PresentationCore" Pack="False">
      <RequiredTargetFramework>3.0</RequiredTargetFramework>
    </Reference>
    <Reference Include="PresentationFramework" Pack="False">
      <RequiredTargetFramework>3.0</RequiredTargetFramework>
    </Reference>
    <Reference Include="Microsoft.Build" Pack="False" />
    <Reference Include="Microsoft.CSharp" Pack="False" />
    <Reference Include="System" Pack="False" />
    <Reference Include="System.Configuration" Pack="False" />
    <Reference Include="System.Core" Pack="False" />
    <Reference Include="System.Runtime.Remoting" Pack="False" />
    <Reference Include="System.Xml" Pack="False" />
    <Reference Include="System.Xml.Linq" Pack="False" />
    <Reference Include="System.Xml.Serialization" Pack="False" />
    <Reference Include="System.Transactions" Pack="False" />
    <Reference Include="System.Xaml" Pack="False" />
    <Reference Include="System.Xml" Pack="False" />
    <Reference Include="System.Xml.Linq" Pack="False" />
    <Reference Include="WindowsBase" Pack="False">
      <RequiredTargetFramework>3.0</RequiredTargetFramework>
    </Reference>
    <ProjectReference Include="..\ApprovalUtilities\ApprovalUtilities.csproj" />
  </ItemGroup>
</Project>